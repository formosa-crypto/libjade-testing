require "../src/dilithium3/ref/common.jazz"

export
fn sampleInBall_jazz(reg u64 ptr_f, reg u64 ptr_seed) {
	stack u32[Li2_polydeg] f;
	stack u8[32] seed;
	reg u8 c;
	reg u32 v;

	reg u64 i;
	//reg u64 addr;

	i = 0;
	while(i < 32) {
		c = (u8)[ptr_seed + i];
		seed[(int) i] = c;
		i += 1;
	}

	f = sampleInBall(f, seed);
	
	i = 0;
	while(i < Li2_polydeg) {
		v = f[(int) i];
		(u32)[ptr_f + 4 * i] = v;
		i += 1;
	}
}
